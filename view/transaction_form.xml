<form>
    <label name="uuid"/>
    <field name="uuid" xfill="1"/>
    <label name="description"/>
    <field name="description"/>
    <label name="origin"/>
    <field name="origin"/>
    <notebook colspan="4">
        <page string="General" id="general">
            <label name="party"/>
            <field name="party"/>
            <label name="amount"/>
            <field name="amount"/>
            <label name="currency"/>
            <field name="currency"/>
        </page>
        <page string="Other Information" id="other_info">
            <label name="company"/>
            <field name="company"/>
            <label name="gateway"/>
            <field name="gateway"/>
            <label name="reference_gateway"/>
            <field name="reference_gateway"/>
            <label name="authorisation_code"/>
            <field name="authorisation_code"/>
        </page>
        <page string="Logs" id="log">
            <field name="log"/>
        </page>
    </notebook>
    <group col="10" colspan="4" id="buttons">
        <field name="state"/>
        <button name="cancel"
            icon="tryton-cancel"
            confirm="Are you sure to cancel the transaction?"/>
        <button name="draft"
            icon="tryton-go-next"/>
        <button name="pending"
            icon="tryton-go-next"/>
        <button name="authorized"
            icon="tryton-go-next"/>
        <button name="refund"
            icon="tryton-go-previous"/>
        <button name="confirm"
            icon="tryton-go-next"/>
    </group>
</form>
